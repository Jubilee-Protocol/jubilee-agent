{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": false,
        "noEmit": false,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true
    },
    "include": [
        "src/core.ts",
        "src/agents/**/*",
        "src/services/**/*",
        "src/tools/**/*",
        "src/memory/**/*",
        "src/mcp/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "web",
        "**/*.test.ts"
    ]
}